{
  "update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 2,
  "name": "__MSG_name__",
  "short_name": "__MSG_shortname__",
  "default_locale": "en_US",
  "description": "__MSG_desc__",
  "minimum_chrome_version": "21",
  "icons": {
    "128": "img/128.png"
  },
  "background": {
    "scripts": [
      "core/bs.js",
      "core/cs.js",
      "core/bg.js"
    ],
    "persistent": true
  },
  "options_page": "html/options.html",
