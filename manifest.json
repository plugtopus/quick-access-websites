    "chrome_style": true,
    "open_in_tab": false
  },
  "browser_action": {
    "default_icon": {
      "128": "img/128.png"
    },
    "default_title": "__MSG_title__",
    "default_popup": "html/popup.html"

  },
  "permissions": ["storage", "tabs", "http://*/*", "https://*/*", "webRequest", "webRequestBlocking"],
  "content_scripts": [],
  "version": "2018.07.06.03"
}